@model osena.Pages.Shared.Sidebar.Sidebar.Props

<aside
    id="sidebar"
    class="z-50 fixed top-0 right-0 h-screen overflow-y-auto w-1/2 rounded-l-xl cursor-default pb-8 bg-[#87a8a4] translate-x-full transition-all duration-300 ease-in-out sm:w-2/5"
>
    <i id="close" class="fa-solid fa-x mt-6 mb-8 ml-7 cursor-pointer text-slate-50 font-bold text-2xl"></i>
    @foreach (var sidebar in Model.Sidebar)
    {
        <a asp-page="@sidebar.Title" class="flex text-lg items-center gap-5 px-7 py-4 text-[#f9f8f3]">
            <i class="@sidebar.Icon w-6"></i>
            <h4 class="group font-semibold text-slate-50">
                <span class="bg-gradient-to-r from-slate-50 to-slate-50 bg-[length:0%_0.125rem] bg-left-bottom bg-no-repeat transition-all duration-500 ease-out group-hover:bg-[length:100%_0.125rem]">
                    @sidebar.Title
                </span>
            </h4>
        </a>
        <hr class="mx-7 border-slate-50" />
    }
</aside>